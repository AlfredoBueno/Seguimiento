@model SeguimientoAlumnosEgresados2.Models.historialacademico

@{
    ViewBag.Title = "EditH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/StyleSheetForm.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".datepicker").datepicker({
            dateFormat: "mm/dd/yy",
            changeMonth: true,
            changeYear: true,
            gotoCurrent: true,
            yearRange: "1970:+10",
            showOn: "button",
            buttonText: "..."
        });

    });
</script>

<h2>Editar Evento</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Evento academico</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idhistorialacademico)

    <div class="form-group">
        <label class="col-md-2">Numero de control:</label>
        <div class="col-md-10">
            @Html.DropDownList("noControl", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.noControl, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Titulo:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tituloH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tituloH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Descripcion:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.descripcionH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.descripcionH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Fecha:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.fechaH, new { htmlAttributes = new { @class = "form-control datepicker" } })
            @Html.ValidationMessageFor(model => model.fechaH, "", new { @class = "text-danger" })
        </div>
    </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.rutaImg, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.rutaImg, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rutaImg, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" new { id=Model.noControl } />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver al listado", "IndexH", new { id = Model.noControl })
</div>
